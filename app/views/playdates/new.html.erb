Make a New PlayDate!

<%#= new_dog_playdate GET    /dogs/:dog_id/playdates/new(.:format)                                                    playdates#new
 %>

<%= simple_form_for [@dog, @playdate] do |f|%>
<%= f.input :date, as: :select, collection: @dog.available_dates, prompt: 'Select Date' %>
<%= f.input :payment, as: :select, collection: ['cash', 'credit card'] ,prompt: 'Select Payment Method' %>
<%= f.submit %>
<% end %>
