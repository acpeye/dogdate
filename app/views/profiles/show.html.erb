          <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Completed Playdates</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="home">
            <% future_playdates = current_user.playdates.select {|playdate| playdate.completed == false} %>
            <% future_playdates.each do |playdate|  %>
              <div class="card-product">
                <img src=<%="#{playdate.dog.images_url[0]}"%>>
                <div class="card-product-infos">
                  <h2> <%= playdate.date %> </h2>
                  <p>Get ready to shake paws with <strong><%= playdate.dog.name %>!</strong></p>
                </div>
              </div>
            <% end  %>
          </div>
          <div role="tabpanel" class="tab-pane" id="profile">
            <% completed_playdates = current_user.playdates.select {|playdate| playdate.completed == true} %>
