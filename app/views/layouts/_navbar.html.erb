<div class="navbar">
  <!-- Logo -->
  <a href="/" class="navbar-brand">
    <%= image_tag "logo.png", alt: "PlayPaws" %>
  </a>
  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">
    <!-- <a href="" class="navbar-item navbar-link">Messages</a> -->
    <!-- <a href="#" class="navbar-btn btn-medium">Browse</a> -->
    <!-- Profile picture with dropdown list -->
    <div class="navbar-item">
      <% if user_signed_in? || owner_signed_in? %>
        <div class="dropdown">
          <div class="avatar dropdown-toggle" id="navbar-menu" data-toggle="dropdown">
            <%#= image_tag(current_user.avatar_url) if owner_signed_in? %>
            <%= image_tag(current_user.avatar_url) if user_signed_in? %>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li><%= link_to "Profile", profile_user_path %></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      <% else %>
      <%= link_to "Login", new_user_session_path %>
      <% end %>
    </div>
  </div>
</div>
