<div class="container">
<!--   <div class="row">-->
<div class="col-lg-8 dog-col">
      <div class="center" id="rounded-border">
        <%= image_tag @dog.images_url[0], alt: @dog.name, width: 600 %>
      </div>
      <div class="left">
        <h2 class="less-margin"><%= @dog.name %></h2>
        <p class="less-margin"><%= @dog.breed %></p>
        <p><%= @dog.description %></p>
      </div>
      <div class="playdate-card-owner playdate-center-cropped" style="background-image: url(<%= @dog.owner.avatar_url %>);">
        <p class="playdate-owner-name"><%= @dog.owner.first_name %></p>
        <%= link_to "", owner_path(@dog.owner), class: "owner-card-link" %>
      </div>
    </div>

    <div>
      <div class="playdate-col-lg-4 form-col">
        <p class="border-bottom"><i class="fas fa-paw ratings"></i><i class="fas fa-paw ratings"></i><i class="fas fa-paw ratings"></i><i class="fas fa-paw ratings"></i><i class="fas fa-paw ratings gray"></i> 8</p>
        <p></p>
        <div class="form">
          <%= simple_form_for [@dog, @playdate] do |f|%>
          <%= f.label :date, 'Date' %>
          <%= f.input :date, as: :select, collection: @dog.available_dates, prompt: 'Select Date', label: false %>
          <%= f.label :date, 'Payment' %>
          <%= f.input :payment, as: :select, collection: ['cash', 'credit card'] ,prompt: 'Select Payment Method', label: false %>
        </div>
        <div class="form-center">
          <%= link_to f.submit, profile_user_path, :class => "dog-btn"%>
        </div>
        <% end %>
            </div>

        <div class="playdate-rules">
        <h2 class="playdate-border-bottom">Doghouse Rules</h2>
        <ul>
          <li><%= @dog.owner.first_name %> prefers cash</li>
          <li>He normally chooses to meet at the park</li>
        </ul>
      </div>

    </div>
    </div>
<!--   </div> -->
</div>




